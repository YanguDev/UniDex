.unity-scroller__low-button {
    width: 0;
    height: 0;
}

.unity-scroller__high-button {
    width: 0;
    height: 0;
}

.unity-scroller__slider {
    margin: 0;
    width: 100%;
    min-width: 0;
    border-radius: 4px;
}

.unity-base-slider__dragger {
    margin: 0;
    width: 100%;
    min-width: 0;
    border-radius: 4px;
}

.unity-base-slider__tracker {
    width: 0;
}

Scroller {
    width: 8px;
}

Scroller * {
    border-width: 0;
}

#PokemonContainer #unity-content-container {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
}

.unity-text-field__input {
    background-color: white;
    border-width: 0;
    border-radius: 4px;
}

#ExitButton {
    background-color: red;
}

#ExitButton:hover {
    background-color: rgb(234, 129, 129);
}

PokemonSlot {
    border-width: 2px;
    margin: 4px;
    border-color: rgba(0, 0, 0, 0.4);
    border-radius: 8px;
    background-color: rgba(255, 255, 255, 0.6);
    color: black;
    -unity-font-style: bold;
    -unity-text-align: middle-center;
    transition: all;
    transition-duration: 0.2s;
    width: 160px;
    height: 160px;
}

PokemonSlot:hover {
    border-color: rgba(0, 0, 0, 0.8);
}

PokemonSlot Image {
    flex-grow: 1;
}
